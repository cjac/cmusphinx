#!/bin/sh

tmpout="test-sphinx_fe.out"

echo "WAVE2FEAT TEST"
sh @abs_top_builddir@/libtool --mode=execute @abs_top_builddir@/src/sphinx_fe/sphinx_fe \
-srate 11025 \
-frate 105 \
-wlen 0.024 \
-alpha 0.97 \
-ncep 13 \
-nfft 512 \
-nfilt 36 \
-upperf 5400 \
-lowerf 130 \
-blocksize 262500 \
-i @abs_top_srcdir@/test/regression/chan3.raw \
-o test-sphinx_fe.mfc  \
-raw 1 > $tmpout 2>&1 

sh @abs_top_builddir@/libtool --mode=execute @abs_top_builddir@/src/sphinx_cepview/sphinx_cepview \
-i 13 \
-d 13 \
-f test-sphinx_fe.mfc \
> test-sphinx_fe.cepview 2>>$tmpout

if (@PERL@ @abs_top_srcdir@/test/regression/compare_table.pl test-sphinx_fe.cepview @abs_top_srcdir@/test/regression/chan3.cepview | grep SUCCESS > /dev/null 2>&1) ; \
then echo "WAVE2FEAT test PASSED"; exit 0; else \
echo "WAVE2FEAT test FAILED"; exit 1; fi

