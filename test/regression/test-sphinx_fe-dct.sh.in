#!/bin/sh

tmpout="test-sphinx_fe-dct.out"

echo "WAVE2FEAT-DCT INVERTIBLE TEST"
sh @top_builddir@/libtool --mode=execute @top_builddir@/src/sphinx_fe/sphinx_fe \
-transform dct \
-cep2spec yes \
-nfilt 36 \
-i @top_srcdir@/test/regression/chan3.mfc \
-o test-sphinx_fe-dct.logspec.out  \
> $tmpout 2>&1 

sh @top_builddir@/libtool --mode=execute @top_builddir@/src/sphinx_fe/sphinx_fe \
-transform dct \
-spec2cep yes \
-nfilt 36 \
-i test-sphinx_fe-dct.logspec.out  \
-o test-sphinx_fe-dct.mfc.out  \
>> $tmpout 2>&1 

sh @top_builddir@/libtool --mode=execute @top_builddir@/src/sphinx_cepview/sphinx_cepview \
-i 13 \
-d 13 \
-f test-sphinx_fe-dct.mfc.out \
> test-sphinx_fe-dct.cepview.out 2>>$tmpout

if (@PERL@ @top_srcdir@/test/regression/compare_table.pl test-sphinx_fe-dct.cepview.out @top_srcdir@/test/regression/chan3.cepview | grep SUCCESS > /dev/null 2>&1) ; \
then echo "WAVE2FEAT-DCT INVERTIBLE test PASSED"; exit 0; else \
echo "WAVE2FEAT-DCT INVERTIBLE test FAILED"; exit 1; fi

