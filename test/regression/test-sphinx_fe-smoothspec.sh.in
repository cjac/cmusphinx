#!/bin/sh

tmpout="test-sphinx_fe-smoothspec.out"

echo "WAVE2FEAT-SMOOTHSPEC TEST"
sh @top_builddir@/libtool --mode=execute @top_builddir@/src/sphinx_fe/sphinx_fe \
-smoothspec yes \
-samprate 11025 \
-frate 105 \
-wlen 0.024 \
-alpha 0.97 \
-nfft 512 \
-nfilt 36 \
-upperf 5400 \
-lowerf 130 \
-blocksize 262500 \
-i @top_srcdir@/test/regression/chan3.raw \
-o test-sphinx_fe-smoothspec.logspec.out  \
-raw yes > $tmpout 2>&1 

sh @top_builddir@/libtool --mode=execute @top_builddir@/src/sphinx_cepview/sphinx_cepview \
-i 36 \
-d 36 \
-f test-sphinx_fe-smoothspec.logspec.out \
> test-sphinx_fe-smoothspec.cepview.out 2>>$tmpout

if (@PERL@ @top_srcdir@/test/regression/compare_table.pl test-sphinx_fe-smoothspec.cepview.out @top_srcdir@/test/regression/chan3-smoothspec.cepview | grep SUCCESS > /dev/null 2>&1) ; \
then echo "WAVE2FEAT-SMOOTHSPEC test PASSED"; exit 0; else \
echo "WAVE2FEAT-SMOOTHSPEC test FAILED"; exit 1; fi

