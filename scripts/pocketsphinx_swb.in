#!/bin/sh
S2CONTINUOUS=@prefix@/bin/pocketsphinx_continuous
HMM=@prefix@/share/pocketsphinx/model/hmm/wsj1
LM=@prefix@/share/pocketsphinx/model/lm/swb
LMFILE=@prefix@/share/pocketsphinx/model/lm/swb/swb.lm.DMP
DICT=@prefix@/share/pocketsphinx/model/lm/swb/swb.dic

echo " "
echo "pocketsphinx_swb:"
echo "  Demo CMU PocketSphinx decoder with SWB language model."
echo " "

echo "<executing $S2CONTINUOUS, please wait>"
$S2CONTINUOUS -live yes \
	-fwdflat yes -bestpath yes \
	-lm ${LMFILE} \
	-dict ${DICT} \
	-hmm ${HMM}
