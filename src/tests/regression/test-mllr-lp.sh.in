#!/bin/sh

echo "LIVEPRETEND+MLLR TEST"
echo "YOU SHOULD SEE THE RECOGNITION RESULT 'P I T T S B U R G H'"

tmpout="test-mllr-lp.out"

sh @abs_top_builddir@/libtool --mode=execute @abs_top_builddir@/src/programs/sphinx3_livepretend \
@abs_top_srcdir@/model/lm/an4/an4.ctl \
@abs_top_srcdir@/model/lm/an4 \
@abs_top_builddir@/model/lm/an4/args.an4.test.mllr > $tmpout 2>&1

grep "FWDVIT" $tmpout
grep "FWDXCT" $tmpout

if (grep "FWDVIT" $tmpout |grep "P I T T S B U R G H" >/dev/null 2>&1) ; \
then echo "LIVEPRETEND MLLR test PASSED" ; else 
echo "LIVEPRETEND MLLR test FAILED" ; fi


